@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center mb-0">The Columbia Foster &amp; Adoption Project's Inventory View</h1>

<img class="w-25 mx-auto d-block" src="~/imgs/cfap-logo.svg" alt="CFAP Logo" />

<div id="iBelongCarousel" class="carousel slide w-50 my-1 mx-auto" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#iBelongCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#iBelongCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#iBelongCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#iBelongCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#iBelongCarousel" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>
    @* Images go inside of this div tag *@
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/imgs/i-belong-baskets-1.jpeg" alt="Display of iBelong baskets" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imgs/i-belong-baskets-2.jpeg" alt="Angled display of iBelong baskets" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imgs/i-belong-baskets-3.jpg" alt="iBelong baskets close-up" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imgs/i-belong-baskets-4.jpeg" alt="iBelong baskets in SUV" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/imgs/i-belong-baskets-5.jpeg" alt="Example of a iBelong basket's contents" />
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#iBelongCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#iBelongCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
</div>