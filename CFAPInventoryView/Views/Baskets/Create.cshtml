@model CFAPInventoryView.Data.Models.Basket

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Basket</h4>
<hr />
<div class="row mb-2">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AgeGroupId" class="control-label"></label>
                <select asp-for="AgeGroupId" class ="form-control" asp-items="ViewBag.AgeGroupsSelectList">
                    <option value="@null">Select...</option>
                </select>
                <span asp-validation-for="AgeGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EthnicityId" class="control-label"></label>
                <select asp-for="EthnicityId" class ="form-control" asp-items="ViewBag.EthnicitiesSelectList">
                    <option value="@null">Select...</option>
                </select>
                <span asp-validation-for="EthnicityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenderId" class="control-label"></label>
                <select asp-for="GenderId" class ="form-control" asp-items="ViewBag.GendersSelectList">
                    <option value="@null">Select...</option>
                </select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAssembled" class="control-label"></label>
                <input asp-for="DateAssembled" class="form-control" />
                <span asp-validation-for="DateAssembled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" min="1" max="1000" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SafeStockLevel" class="control-label"></label>
                <input asp-for="SafeStockLevel" class="form-control" min="1" max="1000" />
                <span asp-validation-for="SafeStockLevel" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
