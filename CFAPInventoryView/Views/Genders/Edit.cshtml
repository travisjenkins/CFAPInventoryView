@model CFAPInventoryView.Data.Models.Gender

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Gender</h4>
<hr />
<div class="row mb-2">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GenderId" />
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" aria-required="true" placeholder="description" />
                <label asp-for="Description" class="control-label"></label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-switch mb-3">
                <input class="form-check-input" asp-for="Active" role="switch" />
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.Active)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
